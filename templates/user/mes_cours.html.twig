{% extends 'base.html.twig' %}

{% block title %}Mes cours{% endblock %}

{% block body %}
<div class="container my-4">

  <div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="h3 m-0">Mes cours</h1>
    <a href="{{ path('cours') }}" class="btn btn-outline-secondary btn-sm">Voir tous les cours</a>
  </div>

  {% if cours is empty %}
    <div class="alert alert-info">
      Vous n’êtes inscrit à aucun cours pour le moment.
    </div>
  {% else %}
    <div class="row g-3">
      {% for c in cours %}
        <div class="col-md-6 col-lg-4">
          <div class="card h-100 shadow-sm">
            {% if c.image %}
              <img src="{{ asset('images/cours/' ~ c.image) }}"
                   class="card-img-top"
                   style="height:160px;object-fit:cover;"
                   alt="{{ c.titre }}">
            {% endif %}

            <div class="card-body">
              <h5 class="card-title">{{ c.titre }}</h5>

              {% if c.description %}
                <p class="card-text text-muted small">
                  {{ c.description|slice(0, 110) }}{% if c.description|length > 110 %}...{% endif %}
                </p>
              {% endif %}

              <div class="d-flex flex-wrap gap-2">
                {% if c.formateur %}
                  <span class="badge bg-secondary">Formateur: {{ c.formateur }}</span>
                {% endif %}
                <span class="badge bg-primary">{{ c.prix }} €</span>
              </div>
            </div>

            <div class="card-footer bg-white border-0 d-flex justify-content-end">
              <a href="{{ path('cours_show', {id: c.id}) }}" class="btn btn-sm btn-primary">
                Ouvrir
              </a>
            </div>

          </div>
        </div>
      {% endfor %}
    </div>
  {% endif %}

</div>
{% endblock %}