 {% extends 'base.html.twig' %}

{% block title %}{{ cours.titre }}{% endblock %}

{% block body_class %}page-cours-show{% endblock %}

{% block body %}
<main class="container py-4">
			<button onclick="changerMode()" id="modeButton">üåô</button>

  {# ===== Breadcrumb ===== #}
  <nav aria-label="breadcrumb" class="mb-3">
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><a href="{{ path('cours') }}">Tous les cours</a></li>
      <li class="breadcrumb-item"><a href="{{ path('cours_communication') }}">Cours en Communication</a></li>
       <li class="breadcrumb-item"><a href="{{ path('cours_informatique') }}">Cours en r√©saux informatiques</a></li>
      <li class="breadcrumb-item " aria-current="page">{{ cours.titre }}</li>
    </ol>
  </nav>

  {# ===== HERO ===== #}
  <div class="p-4 rounded-3 bg-light border mb-4">
    <div class="d-flex flex-column flex-lg-row justify-content-between gap-3">
      <div>
        <h1 class="nom_lecon mb-2">{{ cours.titre }}</h1>

        {% if cours.description %}
          <p class="text-muted mb-3">{{ cours.description }}</p>
        {% endif %}

        <div class="d-flex flex-wrap gap-2">
          
          <span class="badge bg-secondary">Formateur : {{ cours.formateur }}</span>
          <span class="badge bg-primary">{{ cours.prix }} ‚Ç¨</span>
        </div>
      </div>

      <div class="d-flex align-items-start justify-content-lg-end">
        {% set firstLecon = lecons|first %}
        {% if firstLecon %}
          <a class="button-cours w-100"
             href="{{ path('lecon_show', {id: firstLecon.id}) }}">
            ‚ñ∂ Commencer
          </a>
        {% else %}
          <button class="btn btn-secondary btn-lg" disabled>Aucune le√ßon</button>
        {% endif %}
      </div>
    </div>
  </div>

  {# ===== STATS ===== #}
  {% set total = lecons|length %}
  {% set freeCount = 0 %}
  {% for l in lecons %}
    {% if l.estGratuite %}{% set freeCount = freeCount + 1 %}{% endif %}
  {% endfor %}
  {% set premiumCount = total - freeCount %}

  <div class="row g-3 mb-4">
    <div class="col-md-4">
      <div class="card shadow-sm">
        <div class="card-body">
          <div class=" small  ">Le√ßons</div>
          <div class="h4 mb-0">{{ total }}</div>
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <div class="card shadow-sm">
        <div class="card-body ">
          <div class=" small">Gratuites</div>
          <div class="h4 mb-0 text-success">{{ freeCount }}</div>
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <div class="card shadow-sm">
        <div class="card-body status">
          <div class=" small">Premium</div>
          <div class="h4 mb-0 text-secondary">{{ premiumCount }}</div>
        </div>
      </div>
    </div>
  </div>

  <div class="row g-4">
    {# ===== LESSON LIST ===== #}
    <div class="col-lg-8">
      <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="h4 mb-0">Programme</h2>
        <span class="text-muted small">{{ total }} le√ßon(s)</span>
      </div>

      <div class="list-group shadow-sm">
        {% for lecon in lecons %}
          {% set isFree = lecon.estGratuite %}
          <div class="list-group-item d-flex justify-content-between align-items-center">
            <div class="me-3">
              <div class="fw-semibold">
                <span class="text-muted">{{ lecon.position }}.</span>
                {{ lecon.titre }}
              </div>

              <div class="small text-muted">
                {% if isFree %}
                  <span class="badge bg-success">Gratuite</span>
                {% else %}
                  <span class="badge bg-secondary">üîí Premium</span>
                {% endif %}
              </div>
            </div>

            <div class="text-end">
              {% if isFree %}
                <a class="button-cours"
                   href="{{ path('lecon_show', {id: lecon.id}) }}">
                  ‚ñ∂Ô∏è Voir
                </a>
              {% else %}
                <button class="btn btn-sm btn-outline-secondary" disabled>
                  üîí Bloqu√©
                </button>
              {% endif %}
            </div>
          </div>
        {% else %}
          <div class="list-group-item">Aucune le√ßon trouv√©e.</div>
        {% endfor %}
      </div>
    </div>

    {# ===== SIDEBAR ===== #}
    <div class="col-lg-4">
      <div class="card shadow-sm">
        {% if cours.image %}
          <img src="{{ asset('images/cours/' ~ cours.image) }}" class="card-img-top" alt="{{ cours.titre }}">
        {% endif %}
        <div class="card-body">
          <h3 class="h5 mb-3">Informations</h3>

          <ul class="list-unstyled mb-3">
            <li class="mb-1"><strong>Prix :</strong> {{ cours.prix }} ‚Ç¨</li>
            <li class="mb-1"><strong>Formateur :</strong> {{ cours.formateur }}</li>
           
            <li class="mb-1"><strong>Le√ßons :</strong> {{ total }}</li>
          </ul>

          {% if firstLecon %}
            <a class="button-cours" 
               href="{{ path('lecon_show', {id: firstLecon.id}) }}">
              ‚ñ∂ Commencer
            </a>
          {% endif %}
        </div>
      </div>

      <div class="alert alert-info mt-3">
        <strong>Astuce :</strong> La premi√®re le√ßon est gratuite pour d√©couvrir le cours.
      </div>
    </div>
  </div>

</main>
{% endblock %}
